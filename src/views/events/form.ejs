<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<main class="container">
  <h1><%= title %></h1>

  <form action="<%= action %>" method="POST" class="form-card">
    <div class="form-group">
      <label for="eventName">Nome do evento</label>
      <input
        type="text"
        id="eventName"
        name="eventName"
        required
        minlength="3"
        value="<%= event.eventName || '' %>"
      />
      <% if (errors && errors.eventName) { %>
        <small class="error"><%= errors.eventName %></small>
      <% } %>
    </div>

    <div class="form-group">
      <label for="eventDate">Data do evento</label>
      <input
        type="date"
        id="eventDate"
        name="eventDate"
        required
        value="<%= event.eventDate || '' %>"
      />
      <% if (errors && errors.eventDate) { %>
        <small class="error"><%= errors.eventDate %></small>
      <% } %>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="/eventos" class="btn btn-outline">Cancelar</a>
  </form>
</main>

<%- include('../partials/footer') %>
