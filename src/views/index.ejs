<%- include('partials/header') %>
<%- include('partials/navbar') %>

<main class="container">
  <section class="hero">
    <div class="hero-text">
      <h1>Organize seus <span>eventos fotográficos</span> em um só lugar.</h1>
      <p>Gerencie eventos, clientes e galerias de fotos com praticidade. Tudo online, com acesso seguro.</p>
      <div class="hero-actions">
        <a href="/auth/login" class="btn btn-primary">Entrar</a>
        <a href="/auth/register" class="btn btn-outline">Criar conta</a>
      </div>
    </div>
    <div class="hero-image">
      <img src="https://images.pexels.com/photos/1444444/pexels-photo-1444444.jpeg" alt="Fotógrafo em ação">
    </div>
  </section>

  <section class="section">
    <h2>Eventos recentes</h2>
    <div class="cards-grid">
      <% if (eventosRecentes && eventosRecentes.length) { %>
        <% eventosRecentes.forEach(e => { %>
          <article class="card">
            <h3><%= e.eventName %></h3>
            <p><strong>Data:</strong> <%= e.eventDate %></p>
            <a href="/eventos" class="btn btn-secondary btn-small">Ver meus eventos</a>
          </article>
        <% }) %>
      <% } else { %>
        <p>Nenhum evento registrado ainda.</p>
      <% } %>
    </div>
  </section>
</main>

<%- include('partials/footer') %>
