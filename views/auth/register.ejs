<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<main class="container auth-container">
  <h1>Cadastro</h1>

  <form action="/auth/register" method="POST" class="form-card">
    <div class="form-group">
      <label for="name">Nome</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        minlength="3"
        value="<%= old.name || '' %>"
      />
      <% if (errors && errors.name) { %>
        <small class="error"><%= errors.name %></small>
      <% } %>
    </div>

    <div class="form-group">
      <label for="email">E-mail</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        value="<%= old.email || '' %>"
      />
      <% if (errors && errors.email) { %>
        <small class="error"><%= errors.email %></small>
      <% } %>
    </div>

    <div class="form-group">
      <label for="password">Senha</label>
      <div class="password-wrapper">
        <input
          type="password"
          id="password"
          name="password"
          required
          minlength="8"
          pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,}$"
          title="Mínimo 8 caracteres, com letra maiúscula, minúscula, número e símbolo."
        />
        <span class="material-icons password-toggle">visibility</span>
      </div>
      <% if (errors && errors.password) { %>
        <small class="error"><%= errors.password %></small>
      <% } %>
    </div>

    <div class="form-group">
      <label for="confirmPassword">Confirmar senha</label>
      <div class="password-wrapper">
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          required
          minlength="8"
          pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,}$"
          title="Mínimo 8 caracteres, com letra maiúscula, minúscula, número e símbolo."
        />
        <span class="material-icons password-toggle">visibility</span>
      </div>
      <% if (errors && errors.confirmPassword) { %>
        <small class="error"><%= errors.confirmPassword %></small>
      <% } %>
    </div>

    <button type="submit" class="btn btn-primary">Criar conta</button>

    <p class="auth-link">
      Já tem conta? <a href="/auth/login">Fazer login</a>
    </p>
  </form>
</main>

<%- include('../partials/footer') %>
